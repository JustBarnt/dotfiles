[user]
  name = justbarnt
  email = functnal@gmail.com
[core]
  fsmonitor = true # Uses filesystem to detect changes instead of scanning all files
  splitIndex = true # Splits index into a base file + changes to avoid constantly re-writing the `.git/index` file
  excludesFile = ~/.config/.gitignore_global
  editor = nvim
  safecrlf = false
  longpaths = true
  hooksPath = ~/.config/git/hooks/
[submodule]
  recurse = true
[fetch]
  recurseSubmodules = on-demand
[merge]
  tool = diffview
[mergetool "neovim"]
  cmd = nvim -d $LOCAL $REMOTE $BASE $MERGED
[mergetool "diffview"]
  cmd = nvim -c DiffviewOpen
[mergetool]
  prompt = false
[diff]
  tool = rider
[difftool]
  prompt = false
[difftool "rider"]
  cmd = rider diff "$LOCAL" "$REMOTE"
[difftool "diffview"]
  cmd = nvim -d "$LOCAL" "$REMOTE" -c "DiffviewOpen"
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[init]
  defaultBranch = main
[commit]
  template = ~/.config/git/gitmessage
[push]
  autoSetupRemote = true
[include]
  path = ~/.config/git/delta-config
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[credential]
  provider = generic
  helper = manager
[http "https://svnstore:3000"]
  sslCAInfo = C:/Users/bwilliams/git-cert/devsupportvm01-ad-commsys-com-chain.pem
[include]
  path = ~/.config/git/aliases
[includeIf "hasconfig:remote.*.url:https://svnstore:3000/**"]
